#include <stdio.h>

int main (void)

{

	int uInput, i, fibon;

	printf ("How many fibonacci numbers would you like calculated? \n");
	scanf  ("%i", &uInput);

	printf ("Number		Result\n");
	printf ("-----		------\n");
	printf (" 0		  0   \n");
	printf (" 1		  1   \n");

	for (i = 2; i < uInput; i++)
	printf (" %i		  %i  \n", i, (i-1) + (i-2));

	printf ("\n");

	return 0;

}
		
